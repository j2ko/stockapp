<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StockApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/Widget.App.Chip</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textAppearance">@style/TextAppearance.App.ChipBody</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="chipIconTint">@android:color/holo_green_dark</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@android:color/darker_gray</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipMinHeight">24dp</item>

    </style>

    <style name="Widget.App.ChipSearch" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="shapeAppearance">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="chipStartPadding">2dp</item>
        <item name="chipSpacingHorizontal">2dp</item>
    </style>

    <style name="TextAppearance.App.ChipBody" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
        <item name="chipMinHeight">24dp</item>
    </style>
</resources>